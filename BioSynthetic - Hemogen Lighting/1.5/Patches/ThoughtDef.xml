<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThoughtDef[defName="BloodTorch"]/workerClass</xpath>
		<value>
			<workerClass>BioSynth_HemogenLighting.ThoughtWorker_BloodFire</workerClass>
		</value>
		</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThoughtDef[defName="BloodTorch"]/stages</xpath>
		<value>
			<stages>
				<li>
					<label>blood flame</label>
					<description>No fire burns as softly as a blood flame.</description>
					<baseMoodEffect>2</baseMoodEffect>
				</li>
			</stages>
		</value>
	</Operation>
</Patch>